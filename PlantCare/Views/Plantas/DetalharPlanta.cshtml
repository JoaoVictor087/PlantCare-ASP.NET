@model PlantCare.Models.Planta

@{
    var usuarios = ViewBag.Usuarios as List<PlantCare.Models.Usuario>;
    var usuario = usuarios.FirstOrDefault(u => u.IdUsuario == Model.IdUsuario);
}

<h2>Detalhes da Planta</h2>

<p><strong>Nome:</strong> @Model.Nome</p>
<p><strong>Tipo:</strong> @Model.TipoPlanta</p>
<p><strong>Usuário:</strong> @usuario?.Nome</p>
<p><strong>Data de Cadastro:</strong> @Model.DataCadastro.ToShortDateString()</p>

<a asp-action="ListarPlantas">Voltar</a>
